<Window x:Class="Event_System.rights"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Event_System"
        mc:Ignorable="d"
        Title="rights" Background="#FFABE3D1" WindowStartupLocation="CenterScreen" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Label Margin="0,24,0,318" FontSize="50" Foreground="Purple"
               FontWeight="ExtraBold"
            Content="CONTROL" HorizontalAlignment="Center" RenderTransformOrigin="0.46,1.192" />
        <Button Content="ADMIN" Foreground="Purple"
                Background="MediumAquamarine" FontWeight="ExtraBold"
                FontSize="30" Margin="142,304,474,64" Click="Button_Click" />

        <Button Content="USER"
                Foreground="Purple" Background="MediumAquamarine"
                FontWeight="ExtraBold" FontSize="30" Margin="458,304,158,64" 
                Click="User_Click"/>
        <Image Margin="475,116,173,170" Source="/user.png" Stretch="Fill"/>
        <Image Margin="160,116,492,170" Source="/admin.png" Stretch="Fill"/>
    </Grid>
</Window>
